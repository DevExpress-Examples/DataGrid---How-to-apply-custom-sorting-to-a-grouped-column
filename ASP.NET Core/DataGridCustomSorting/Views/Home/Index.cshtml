<h2>DataGrid - How to apply custom sorting to a grouped column</h2>

<script>
    function calculateGroupValue(rowData) {
        let dataGrid = $("#gridContainer").dxDataGrid("instance");
        if (rowData.State == "California")
            return dataGrid.columnOption("State", "sortOrder") == "asc" ? "zzz" : "aaa";
        else
            return rowData.State;
    }

    function groupCellTemplate(element, data) {
        //is expanded
        if (data.data.items) {
            let originalText = "State: " + data.data.items[0].State;
            return element.text(originalText);
        }
        //is not expanded
        if (data.data.collapsedItems) {
            let originalText = "State: " + data.data.collapsedItems[0].State;
            return element.text(originalText);
        }
    }
</script>

@(Html.DevExtreme().DataGrid()
    .ID("gridContainer")
    .ShowBorders(true)
    .DataSource(new JS("customers"))
    .KeyExpr("ID")
    .Columns(columns => {
        columns.Add().DataField("ID");
        columns.Add().DataField("CompanyName");
        columns.Add().DataField("City");
        columns.Add()
            .DataField("State")
            .GroupIndex(0)
            .SortOrder(SortOrder.Asc)
            .CalculateGroupValue(new JS("calculateGroupValue"))
            .GroupCellTemplate(new JS("groupCellTemplate"));
    })
    .GroupPanel(p => p.Visible(true))
    .Grouping(g => g.AutoExpandAll(true))
)

